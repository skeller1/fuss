<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Match date</th>
      <th>Match</th>
      <th>Home</th>
      <th>Visitor</th>
      <th>Goals home</th>
      <th>Goals visitor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.match_date %></td>
        <td><%= match.match_id %></td>
        <td><%= match.home %></td>
        <td><%= match.visitor %></td>
        <td><%= match.goals_home %></td>
        <td><%= match.goals_visitor %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

